@{
    ViewData["Title"] = "Login";
}

<div ng-controller="login.controller as l" class="login-page middle-it container-fluid">
    <div class="row justify-content-center">
        <div class="col-lg-4 col-md-6">
            <img src="~/Content/img/logo.png" alt="smsi project" class="logo" />
            <h1>
                <small>Welcome to SMSi</small>
                Login to your account
            </h1>
            <form role="form">
                <input type="text" autofocus class="form-input" placeholder="Username"
                        ng-model="l.entity.Username" />
                <input type="password"
                        class="form-input" placeholder="Password"
                        ng-model="l.entity.Password" />
                <input type="submit" value="Login" class="btn-submit"
                        ng-click="l.Login()" />
            </form>
        </div>
    </div>
</div>